<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Issue">

	<select id="getBseqNextValue" resultType="int">
		select inum_seq.nextval from dual
	</select>

	<sql id="search">
		<if test="searchType == 't'.toString()">
			and title like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'w'.toString()">
			and writer like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'tw'.toString()">
			and (
			title like '%'||#{keyword}||'%'
			or
			writer like '%'||#{keyword}||'%'
			)
		</if>
	</sql>
	
	<select id="selectSearchIssueList" resultType="issue">
		select * 
		from tbl_issue
		where inum is not null
		<include refid="search"></include>
		order by inum desc
	</select>
	
	<select id="selectSearchIssueCount" resultType="int">
		select count(*)
		from tbl_issue
		where inum is not null
		<include refid="search"></include>
		order by inum desc
	</select>
	

</mapper>