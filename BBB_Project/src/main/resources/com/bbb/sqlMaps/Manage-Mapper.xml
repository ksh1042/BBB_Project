<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Management">	

	<select id="selectJoinList" parameterType="int" resultType="member">
		select id, name, email
		from view_crew
		where pjnum = #{pjNum} and assignyn = 0
	</select>
	
	<sql id="search">
		<if test="searchType == 'id'.toString()">
			and id like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'nm'.toString()">
			and name like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'em'.toString()">
			and email like '%'||#{keyword}||'%'
		</if>
		
	</sql>
	
	<select id="selectTeamMemberList" resultType="member">
		select id, name, email
		from view_crew
		where id not in(#{id}) and pjnum = #{pjNum} and assignyn = 1
		<include refid="search"></include>
	</select>
	
	<select id="TeamMemberListCount" resultType="int">
		select count(*)
		from view_crew
		where id not in(#{id}) and pjnum = #{pjNum} and assignyn = 1
		<include refid="search"></include>
	</select>
	
	<update id="applyMember">
		update tbl_project_partake
		set assignyn = 1
		where pjnum = #{pjNum} and id = #{id}
	</update>
	
	<update id="refuseMember">
		delete from tbl_project_partake
		where pjnum = #{pjNum} and id=#{id}
	</update>
	<sql id="SearchType">
		<if test="SearchType != null">
			<if test="SearchType == 'id'.toString()">
				AND id LIKE '%'||#{keyword}||'%'
			</if>
			<if test="SearchType == 'nm'.toString()">
				AND name LIKE '%'||#{keyword}||'%'
			</if>
			<if test="SearchType == 'em'.toString()">
				AND email LIKE '%'||#{keyword}||'%'
			</if>
			<if test="SearchType == 'All'.toString()">
				AND (id LIKE '%'||#{keyword}||'%'
				OR name LIKE '%'||#{keyword}||'%'
				OR email LIKE '%'||#{keyword}||'%')
			</if>
		</if>
	</sql>
	<select id="getSearchMemberList" resultType="Member">
		select *
		from tbl_member
		where id not in(#{id})
		<include refid="SearchType" />
	</select>
	
	<select id="getSearchMemberListCount" resultType="int">
		select count(*)
		from tbl_member
		where id not in(#{id})
		<include refid="SearchType" />
	</select>
	
	<update id="memberInvite">
		insert into tbl_project_partake(id,pjnum,assignyn)
		values(#{id},#{pjNum},3)
	</update>
</mapper>






   