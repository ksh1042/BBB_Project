<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BoardAttach">
    
    <update id="insertBoardAttach">
    	insert into tbl_board_attach(uuid,bnum,filename,kind,savepath)
    	values(#{uuid},#{bnum},#{filename},#{kind},#{savepath})
    </update>
    <update id="updateBoardAttach">
    	update
    	tbl_board_attach set
    	filename=#{filename},kind=#{kind}
    	where uuid=#{uuid}
    </update>
    <update id="deleteBoardAttach">
    	delete 
    	from tbl_board_attach
    	where uuid=#{uuid}
    </update>
    
    <sql id="search">
    	<if test="searchType != null">
    		<if test="searchType == 'f'.toString()">
    			and filename like '%'||#{keyword}||'%'
    		</if>
    		<if test="searchType == 'k'.toString()">
    			and kind like '%'||#{keyword}||'%'
    		</if>
    	</if>
    	
    </sql>
    <select id="selectSearchBoardAttachList" resultType="boardAttach">
    	select *
    	from tbl_board_attach
    	where uuid is not null
    	<include refid="search" />
    	order by indate desc
    </select>
    <select id="selectBoardAttachByUuid">
    	select *
    	from tbl_board_attach
    	where uuid=#{uuid}
    </select>
    
    	

</mapper>






   